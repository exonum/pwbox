{
  "name": "pwbox",
  "version": "0.1.1",
  "description": "Password-based encryption for Node and browsers",
  "main": "index.js",
  "files": [
    "index.js",
    "lite.js",
    "examples",
    "lib",
    "doc",
    "dist"
  ],
  "directories": {
    "doc": "doc",
    "lib": "lib",
    "example": "examples"
  },
  "scripts": {
    "test": "mocha test/test.all.js",
    "test-browser": "karma start",
    "test-demo": "mocha test/test.demo.js",
    "lint": "semistandard",
    "browser": "mkdirp dist && browserify lite.js -t [ babelify --presets [ es2015 ] ] --standalone pwbox | uglifyjs -o dist/pwbox-lite.min.js",
    "prepublish": "npm run browser"
  },
  "keywords": [
    "crypto",
    "cryptography",
    "libsodium",
    "hash",
    "pwhash",
    "scrypt"
  ],
  "author": "Exonum Team <exonum@bitfury.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "libsodium-wrappers-sumo": "^0.5.1",
    "object-assign": "^4.1.1",
    "scrypt-async": "^1.3.1",
    "tweetnacl": "^0.14.5"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-bytes": "^0.1.1",
    "dirty-chai": "^1.2.2",
    "karma": "^1.6.0",
    "karma-browserify": "^5.1.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "promise": "^7.1.1",
    "selenium-webdriver": "^3.4.0",
    "semistandard": "^11.0.0",
    "sinon": "^2.3.5",
    "sinon-chai": "^2.11.0",
    "uglify-js": "^3.0.17",
    "watchify": "^3.9.0"
  }
}
